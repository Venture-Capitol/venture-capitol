{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": false,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": "src",
		"paths": {
			"@vc/frontend/component/*": ["components/*"],
			"@vc/frontend/asset/*": ["assets/*"],
			"@vc/frontend/page/*": ["pages/*"],
			"@vc/frontend/util/*": ["utils/*"]
		}
	},
	"include": [
		"./src",
		"../../packages/ui/src/components/Button",
		"cypress/integration/1-getting-started/main.spec.ts"
	]
}
