{
	"hosting": {
		"site": "venture-capitol",
		"predeploy": "(cd apps/frontend && npm run build)",
		"public": "apps/frontend/dist",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "/api/**",
				"run": {
					"serviceId": "vc-backend",
					"region": "europe-west1"
				}
			},
			{
				"source": "/dlr/**",
				"run": {
					"serviceId": "dlr-backend",
					"region": "europe-west1"
				}
			},
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	}
}
